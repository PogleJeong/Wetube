extends base

block content 
    if (errorMessage)
        span=errorMessage
        
    form(method="POST").join__form.flex-box-center
        div#join-container__avatar.flex-box-center-column
            img(src="uploads/avatars/baseProfile.jpg")#join__avatar-image
            label(for="join__avatar-input") 아바타 선택
            input(type="file", name="avatarUrl")#join__avatar-input
        div#join-container__info.flex-box-center-column
            p Name
            input(placeholder="Name", name="name", type="text", required)
            p E-mail
            input(placeholder="Email", name="email", type="text", required)
            p Username(ID)
            input(placeholder="Username(ID)", name="username", type="text", required)
            p Password
            input(placeholder="Password", name="password", type="password", required)
            p Password(confirm)
            input(placeholder="confirm Password", name="password2", type="password", required)
            p Location(States)
            input(placeholder="Location", name="location", type="text", required)
            input(type="submit", value="Join")#join__btn
    
    include partials/social-login

    div.auth-switch
        span Already have an account? 
        a(href="/login") Log in now &rarr;

block scripts 
    script(src="/static/js/join.js")